<div class="row">
  <div class="col-sm-4">
    <h3>Conversations</h3>

    <ul class="conversations link-list">
      <li><%= link "Write a message", to: Routes.conversation_path(@conn, :index) %></li>

      <%= for c <- @conversations do %>
        <li class="<%= li_class_for(c, @conversation) %>">
          <%= link to: Routes.conversation_path(@conn, :show, c) do %>
            <%= participants_except(c.participants, @current_player) %>
            <small><%= c.last_message_sent_at %></small>

            <%= if c.new_messages do %>
              <small>New messages</small>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col-sm-8">
    <%= render @view_module, @view_template, assigns %>
  </div>
</div>
